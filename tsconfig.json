{
  "compilerOptions": {
    /* Core Settings */
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Transpiling with TypeScript */
    "module": "preserve",
    "outDir": "dist",

    /* Running in the DOM */
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
